# Running nf-core/mag with parameters

#! /bin/bash
#$ -cwd
#$ -V

source activate nextflow

nextflow run nf-core/mag -r dev --reads "./*_{1,2}.fastq.gz" \
-profile conda --max_memory 200.GB \
-c myconfig.conf --kraken2_db "ftp://ftp.ccb.jhu.edu/pub/data/kraken2_dbs/minikraken2_v2_8GB_201904_UPDATE.tgz" --cat_db "http://tbb.bio.uu.nl/bastiaan/CAT_prepare/CAT_prepare_20200618.tar.gz"


